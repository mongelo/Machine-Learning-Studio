<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Machine_Learning_Studio.DataSetsPage.DataSetsPage">
    <VerticalStackLayout>
        <ListView x:Name="dataSetsMetadataList">
            <!-- Define a DataTemplate to customize the appearance of each item -->
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout>
                            <Label Text="{Binding Name}" FontSize="Large"/>
                            <Label Text="{Binding Size, StringFormat='N={0}'}" FontSize="Medium"/>
                            <Label Text="{Binding Description}" FontSize="Default"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>



    </VerticalStackLayout>
</ContentView>